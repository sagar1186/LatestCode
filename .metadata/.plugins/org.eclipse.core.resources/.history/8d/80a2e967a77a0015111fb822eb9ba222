	class CheaperItemPriceComp implements Comparator<Catalog>{
		 
	    @Override
	    public int compare(Catalog e1, Catalog e2) {
	        if(e1.getPrice() > e2.getPrice()){
	            return 1;
	        } else {
	            return -1;
	        }
	    }
	}
	
	
	
